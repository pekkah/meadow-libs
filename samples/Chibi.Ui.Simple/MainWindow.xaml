<Window x:Class="Chibi.Ui.Simple.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chibi.Ui.Simple"
        mc:Ignorable="d"
        Title="Chibi UI - Simple"
        Width="550"
        Height="330"
        KeyUp="Display_KeyUp">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Image Name="Display" Width="512" Height="256" UseLayoutRounding="false" SnapsToDevicePixels="true" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Stretch="None" />
    </StackPanel>
</Window>
